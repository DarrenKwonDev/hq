{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "model": "openai/gpt-5.2",
  "small_model": "openai/gpt-5.1-codex-mini",
  // "default_agent": "Gyoshu",
  "autoupdate": true,
  "plugin": [
    "oh-my-opencode"
  ],
  // https://opencode.ai/docs/permissions
  "permission": {
    "edit": "allow",
    "write": "allow",
    "read": "allow",
    "bash": {
      "git": "allow",
      "cargo": "allow",
      "npm": "allow",
      "rm": "ask", // 삭제는 물어보는게 안전
      "curl": "allow",
      "default": "ask"
    },
    "webfetch": "allow",
    "external_directory": "ask", // 프로젝트 밖 파일 접근은 확인
    "doom_loop": "deny" // 무한루프는 막는게 나음
  },
}